@startuml
skinparam monochrome true

actor Клиент as user
entity Сервер as srv
database "База данных" as base
actor Менеджер as mng

user -> srv : Отправление команды чат-боту
srv -> base : Создание заявки 
mng -> base : Согласование или отказ заявки
base -> mng : Получение информации о заявках
base -> srv : Информация о согласовании или отказе заявки
srv -> user : Результат рассмотрения заявки
@enduml
